# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=@your_bot_username

# MetaMask Configuration
METAMASK_PHRASE=your_metamask_seed_phrase_here
METAMASK_PASSWORD=your_metamask_password_here

# Browser Configuration (Update these paths for your system)
EXTENSION_PATH=/path/to/your/metamask_extension
USER_DATA_DIR=/path/to/your/user_profile

# Browser Settings
HEADLESS=false
START_MAXIMIZED=true
COLOR_SCHEME=dark

# Pool Configuration
DEFAULT_RANGE_TYPES=passive,wide,narrow,aggressive,insane
SHADOW_BASE_URL=https://www.shadow.so/liquidity/

# Monitoring Settings
POLL_INTERVAL=1
REBALANCE_THRESHOLD=90
BALANCE_TOLERANCE=2

# Security & Notifications
# Comma-separated Telegram user IDs allowed to use the bot (leave empty to allow all)
ALLOWED_USER_IDS=
# Comma-separated chat IDs to receive admin notifications
ADMIN_CHAT_IDS=
# Enable or disable admin notifications
ENABLE_NOTIFICATIONS=true

# Logging
LOG_DIR=logs

# Monitoring
MONITOR_INTERVAL=30
